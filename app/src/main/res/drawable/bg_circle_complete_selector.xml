<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:useLevel="false" android:shape="oval">
            <solid android:color="@color/textFinishedPressed" />
            <stroke
                android:width="1dip"
                android:color="@color/textFinishedPressed" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            android:useLevel="false" android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dip"
                android:color="@color/textFinished" />
        </shape>
    </item>

</selector>