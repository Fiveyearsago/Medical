<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:drawable="@color/white">

    </item>
    <item android:state_checked="true">
        <shape android:shape="oval" android:useLevel="false">
            <solid android:color="@color/colorYellow" />
            <stroke android:width="1dp" android:color="@color/colorYellow" />
           <padding android:bottom="2dp" android:left="4dp" android:right="4dp" android:top="2dp"/>
        </shape>
    </item>
</selector>