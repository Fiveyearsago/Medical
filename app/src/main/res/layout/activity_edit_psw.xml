<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_psw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pageBackground"
    tools:context="com.jy.medical.activities.EditPswActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/page_head" />
        <com.jy.medical.widget.CleanableEditText
            android:layout_marginTop="10dp"
            android:id="@+id/peron_edit_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/clear"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/primary_margin"
            android:paddingRight="@dimen/primary_margin"
            android:hint="请输入原密码"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text_size" />
    </LinearLayout>
    <Button
        style="@style/ButtonBackground"
        android:id="@+id/person_psw_next"
        android:text="下一步"
         />
</LinearLayout>
