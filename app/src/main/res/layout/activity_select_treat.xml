<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_treat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jy.medical.activities.SelectTreatActivity">

    <include layout="@layout/page_head" />

    <TextView
        android:id="@+id/treat_conservative"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_click_bg_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/primary_margin"
        android:paddingRight="@dimen/primary_margin"
        android:text="保守治疗"
        android:textColor="@color/black"
        android:textSize="@dimen/primary_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/primary_margin"
        android:layout_marginRight="@dimen/primary_margin"
        android:background="@color/lineColor" />

    <TextView
        android:id="@+id/treat_operation"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_click_bg_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/primary_margin"
        android:paddingRight="@dimen/primary_margin"
        android:text="手术治疗"
        android:textColor="@color/black"
        android:textSize="@dimen/primary_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/primary_margin"
        android:layout_marginRight="@dimen/primary_margin"
        android:background="@color/lineColor" />

</LinearLayout>
