<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/title_head_tab"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/page_head_tab_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:clickable="true"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/nofication_selector" />

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/segmentTabLayout"
            android:layout_width="220dp"
            android:layout_height="29dp"
            android:layout_centerInParent="true"
            app:tl_indicator_color="#33FFFFFF"
            app:tl_indicator_corner_radius="3dp"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="@color/white"
            app:tl_textsize="15dp" />

        <ImageView
            android:id="@+id/page_head_tab_search"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:cropToPadding="true"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@mipmap/filter" />

    </RelativeLayout>
</merge>