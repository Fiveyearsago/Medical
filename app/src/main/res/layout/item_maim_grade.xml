<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_bg_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diagnose_tag"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/primary_margin"
            android:text="[D01.123]"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:id="@+id/diagnose_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="44dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:lineSpacingExtra="6dp"
            android:paddingLeft="@dimen/primary_margin"
            android:paddingRight="@dimen/primary_margin"
            android:text="医院"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_text_size" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/primary_margin"
        android:layout_marginRight="@dimen/primary_margin"
        android:background="@color/lineColor" />
</LinearLayout>