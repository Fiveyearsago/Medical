<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_law"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    tools:context="com.jy.medical.activities.LawActivity"
    android:orientation="vertical">
    <include
        layout="@layout/page_head_second" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tabLayout_law"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="38dp"
                android:background="@color/white"
                app:tl_indicator_color="@color/colorPrimary"
                app:tl_indicator_height="3dp"
                app:tl_textsize="@dimen/minor_text_size"
                app:tl_textSelectColor="@color/colorPrimary"
                app:tl_tab_padding="@dimen/primary_margin"
                app:tl_textUnselectColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ellipsis" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_law"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


</LinearLayout>
