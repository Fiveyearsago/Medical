<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/platform_title_head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/pageHeadBackground">

        <ImageView
            android:id="@+id/platform_page_head_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="11dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@drawable/platform_image_selector"
            android:clickable="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/platform_page_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2016.10.14"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/platform_page_head_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/primary_margin"
            android:clickable="true"
            android:text="全部"
            android:textColor="@drawable/title_text_color_selector"
            android:textSize="@dimen/large_text_size" />

    </RelativeLayout>
</merge>