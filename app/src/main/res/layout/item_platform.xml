<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_click_bg_selector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="@dimen/primary_margin"
        android:paddingRight="@dimen/primary_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/lineColor" />
        <TextView
            android:id="@+id/item_task_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/bg_task_circle"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="医"/>
        <LinearLayout
            android:layout_toRightOf="@+id/item_task_type"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_platform_people_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mr.Song"
                        android:textColor="@color/black"
                        android:textSize="@dimen/primary_text_size" />

                    <TextView
                        android:id="@+id/item_platform_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/platform_finished"
                        android:paddingBottom="1dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="1dp"
                        android:text="完成"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout

                    android:id="@+id/time_out_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="超"
                        android:textColor="@color/minorColor"
                        android:visibility="gone"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/item_time_out_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/minorColor"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="天"
                        android:textColor="@color/minorColor"
                        android:textSize="12dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">

                <ImageView
                    android:id="@+id/item_platform_time_image"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/platform_time"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_platform_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_platform_time_image"
                    android:text="2016-10-14 11:10"
                    android:textColor="@color/minorColor"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/item_platform_report_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="报案号:C201610141120"
                    android:textColor="@color/minorColor"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>