<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_click_bg_selector"
    android:clickable="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/location_now_image"
            android:layout_width="16dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/location_now"
            android:scaleType="fitXY"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/location_now_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_address_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/location_now_image"
                android:text="定位"
                android:textColor="@color/black"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/item_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/location_now_image"
                android:text="定位"
                android:textColor="@color/minorColor"
                android:textSize="@dimen/third_text_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/e"
            android:layout_width="37dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/pull_up"
            android:scaleType="fitXY"
            android:visibility="invisible" />


    </RelativeLayout>
</LinearLayout>